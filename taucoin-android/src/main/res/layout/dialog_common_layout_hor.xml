<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rect_round_bg_no_border"
    android:gravity="center_horizontal"
    android:clickable="true"
    android:paddingTop="@dimen/widget_size_25"
    android:paddingStart="@dimen/widget_size_10"
    android:paddingEnd="@dimen/widget_size_10"
    android:paddingBottom="@dimen/widget_size_35"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/widget_size_30"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/negativeButton"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/widget_size_150"
            android:layout_height="@dimen/widget_size_50"
            android:textAllCaps="false"
            android:layout_marginEnd="@dimen/widget_size_7"
            android:textSize="@dimen/font_size_18"
            android:textColor="@color/color_white"
            android:gravity="center_vertical|center"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/black_light_rect_round_bg" />

        <TextView
            android:id="@+id/positiveButton"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/widget_size_150"
            android:layout_height="@dimen/widget_size_50"
            android:layout_marginStart="@dimen/widget_size_7"
            android:textSize="@dimen/font_size_18"
            android:textColor="@color/color_white"
            android:gravity="center_vertical|center"
            android:maxLines="1"
            android:textAllCaps="false"
            android:ellipsize="end"
            android:background="@drawable/primary_rect_round_bg" />

    </LinearLayout>

</LinearLayout>