<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/color_bg"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/toolbar" />


        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_root"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:layout_marginTop="15dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_work_frequency"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_working_frequency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="5dp"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginEnd="5dp"
                        android:maxLines="1"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="16dp"
                        app:autoSizeMinTextSize="2dp"
                        app:autoSizeStepGranularity="0.5dp"
                        android:text="@string/setting_work_frequency_assuming"
                        android:textAppearance="@style/TextAppearanceBody1"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_metered"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:layout_marginTop="15dp"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary_light"
                            android:text="@string/setting_metered_network_title"
                            android:includeFontPadding="false"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <ImageView
                            android:visibility="invisible"
                            android:id="@+id/iv_metered_state"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="20dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/icon_star_yellow"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/setting_daily_quota"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_metered_daily_quota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_network_available_data"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_metered_available_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="5dp"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_network_speed_limit"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_metered_speed_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="5dp"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_network_current_speed"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_metered_current_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="5dp"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_wifi"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:layout_marginTop="15dp"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="0dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary_light"
                            android:text="@string/setting_wifi_network_title"
                            android:includeFontPadding="false"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <ImageView
                            android:visibility="invisible"
                            android:id="@+id/iv_wifi_state"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="20dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/icon_star_yellow"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/setting_daily_quota"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_wifi_daily_quota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        </RadioGroup>
                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_network_available_data"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_wifi_available_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="5dp"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_network_speed_limit"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_wifi_speed_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="5dp"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_network_current_speed"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_wifi_current_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="5dp"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>